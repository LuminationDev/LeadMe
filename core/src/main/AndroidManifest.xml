    <!-- hardware acceleration needed for YouTube playback in WebView -->
    <application
        tools:replace="android:label"
        android:clearTaskOnLaunch="true"
        android:icon="@mipmap/leadme_icon_round"
        android:label="@string/app_title"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true"
        android:largeHeap="true"
        >
        <meta-data android:name="google_analytics_adid_collection_enabled" android:value="false" />
        <activity
            android:name="com.lumination.leadme.LeadMeMain"
            android:screenOrientation="portrait"
            android:label="@string/app_title"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".LumiAccessibilityReceiver">
            <intent-filter>
                <action android:name="com.lumination.leadme.BROADCAST_ACTION" />
            </intent-filter>
        </receiver>
        <service
            android:enabled="true"
            android:name=".ScreensharingService"
            android:foregroundServiceType="mediaProjection" >
        </service>
        <service
            android:name="com.lumination.leadme.LumiAccessibilityService"
            android:label="@string/app_title_with_brand"
            android:configChanges="orientation"
            android:stopWithTask="true"
            android:accessibilityFeedbackType="feedbackGeneric"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

    </application>
</manifest>
