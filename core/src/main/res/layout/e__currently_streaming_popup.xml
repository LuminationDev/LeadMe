<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/rounded_popup_white"
    android:gravity="center"
    android:orientation="vertical"
    android:showDividers="middle|beginning|end">


    <LinearLayout
        android:id="@+id/preview_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end"
        android:visibility="visible">


        <TextView
            android:id="@+id/preview_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_horizontal"
            android:text="@string/currently_streaming"
            android:textAlignment="center"
            android:textColor="@color/leadme_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/leadme_darkest_grey"
            android:orientation="vertical">

            <WebView
                android:id="@+id/video_stream_webview"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/leadme_black">

            </WebView>

            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/leadme_black"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">


                <TextView
                    android:id="@+id/vr_mode_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/task_vr_icon_disabled"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@string/vr_mode_off"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/mute_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/vid_mute"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@string/mute"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/unmute_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/vid_unmute"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@string/unmute"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/captions_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/vid_captions"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@string/captions"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/new_video"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/standard_btn_width"
            android:layout_height="@dimen/standard_btn_height"
            android:layout_gravity="center_horizontal"
            android:accessibilityTraversalAfter="@id/back_btn"
            android:accessibilityTraversalBefore="@id/codeInput4"
            android:background="@drawable/bg_active"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/new_video"
            android:textAllCaps="false"
            android:textColor="@color/leadme_white"
            android:textSize="16sp"
            app:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="52dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/video_back_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/standard_btn_width"
            android:layout_height="@dimen/standard_btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_passive"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/leadme_darkest_grey"
            android:textSize="16sp"
            app:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>