<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/rounded_popup_white"
    android:gravity="center"
    android:orientation="vertical"
    android:showDividers="middle|beginning|end">


    <LinearLayout
        android:id="@+id/preview_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end"
        android:visibility="visible">


        <TextView
            android:id="@+id/preview_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_horizontal"
            android:text="@string/currently_streaming"
            android:textAlignment="center"
            android:textColor="@color/leadme_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/leadme_darkest_grey"
            android:orientation="vertical">

            <WebView
                android:id="@+id/video_stream_webview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/leadme_black"></WebView>

            <TextView
                android:id="@+id/no_internet"
                android:layout_width="fill_parent"
                android:layout_height="240dp"
                android:background="@color/leadme_darkest_grey"
                android:drawableBottom="@drawable/icon_restart"
                android:drawablePadding="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:padding="50dp"
                android:text="Internet unavailable\n\nPlease check your connection and tap to retry."
                android:textColor="@color/leadme_white"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/elapsedTimeText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:text="00:00"
                    android:textAllCaps="false"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

                <SeekBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_weight="3"
                    android:max="100"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/lumi_video_progress"
                    android:thumb="?android:attr/fastScrollThumbDrawable" />

                <TextView
                    android:id="@+id/totalTimeText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:text="00:00"
                    android:textAllCaps="false"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/leadme_black" />

            <LinearLayout
                android:id="@+id/basic_controls"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/leadme_darkest_grey"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vr_mode_btn"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/task_vr_icon_disabled"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@string/vr_mode_off"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/rewind_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/vid_rewind" />

                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/vid_play" />

                <ImageView
                    android:id="@+id/pause_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/vid_pause" />

                <ImageView
                    android:id="@+id/fastforward_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/vid_fastforward" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/advanced_controls_expander"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/vid_more"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_horizontal"
                    android:text="@string/more"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/advanced_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/leadme_black"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/mute_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/vid_mute"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@string/mute"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/unmute_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/vid_unmute"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="@string/unmute"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/captions_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/vid_captions"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="Captions off"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/new_video"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/standard_btn_width"
            android:layout_height="@dimen/standard_btn_height"
            android:layout_gravity="center_horizontal"
            android:accessibilityTraversalAfter="@id/back_btn"
            android:accessibilityTraversalBefore="@id/codeInput4"
            android:background="@drawable/bg_active"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/new_video"
            android:textAllCaps="false"
            android:textColor="@color/leadme_white"
            android:textSize="16sp"
            app:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="52dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/video_back_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/standard_btn_width"
            android:layout_height="@dimen/standard_btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_passive"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/leadme_darkest_grey"
            android:textSize="16sp"
            app:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>