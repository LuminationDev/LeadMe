<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/leadme_white"
    android:orientation="vertical"
    android:persistentDrawingCache="scrolling">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/leadme_white"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/arrow_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_vertical"
            android:text="@string/options"
            android:textColor="@color/leadme_black"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/connected_only_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/student_name"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/connected_icon_options"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/wifi_connected_icon" />

                <TextView
                    android:id="@+id/connected_as_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="40dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Connected as"
                    android:textColor="@color/leadme_medium_grey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/connected_as_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="UNKNOWN"
                    android:textColor="@color/accent"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/capture_rate_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/screen_capture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Capture Rate"
                    android:textColor="@color/leadme_medium_grey"
                    android:textSize="16sp" />

                <SeekBar
                    android:id="@+id/screen_capture_rate"
                    android:progressTint="@color/leadme_blue"
                    android:thumbTint="@color/leadme_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/leadme_blue"
                    android:max="100"
                    android:progress="1"
                    tools:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:text="Settings"
            android:textColor="@color/leadme_black"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/auto_updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:layoutDirection="inherit"
            android:paddingStart="5dp"
            android:text="Automatically check for updates"
            android:textColor="@color/leadme_black"
            android:textSize="16sp"
            android:visibility="visible"
            android:buttonTint="@color/leadme_blue"/>

        <CheckBox
            android:id="@+id/auto_install_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:checked="false"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:paddingStart="5dp"
            android:text="Auto-install missing apps"
            android:textColor="@color/leadme_black"
            android:textSize="16sp"
            android:visibility="gone"
            android:buttonTint="@color/leadme_blue"/>

        <TextView
            android:id="@+id/help_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:text="Help"
            android:textColor="@color/leadme_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/how_to_use_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="@string/how_to_use_leadme"
            android:textColor="@color/leadme_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/help_support_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Online support"
            android:textColor="@color/leadme_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:text="Logout"
            android:textColor="@color/light"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>