<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Settings"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/student_set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Anonymous" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/student_set_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_edit"
            android:drawablePadding="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Edit Name" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/leadme_medium_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/student_set_block_icon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:src="@drawable/controls_block"
            android:tint="@color/leadme_medium_grey" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <Switch
                android:id="@+id/student_set_block_toggle"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0"
                android:checked="false"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:showText="false"
                android:switchMinWidth="50dp"
                android:switchPadding="10dp"
                android:text="Blocked Mode OFF"
                android:textSize="16sp"
                android:thumb="@drawable/toggle_thumb"
                android:track="@drawable/toggle_track" />

            <TextView
                android:id="@+id/student_set_block_text"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:text="*Touch screens enabled" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/leadme_medium_grey" />

    <TextView
        android:id="@+id/student_set_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/alert_error"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="5dp"
        android:text="Disconnect Learner"
        android:textSize="18sp" />

    <Button
        android:id="@+id/student_set_close"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/standard_btn_width"
        android:layout_height="@dimen/standard_btn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_passive"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/poppins_semibold"
        android:text="Close"
        android:textAllCaps="false"
        android:textColor="@color/leadme_darkest_grey"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_gravity="center_horizontal" />
</LinearLayout>