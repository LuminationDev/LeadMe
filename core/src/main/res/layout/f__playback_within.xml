<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="false"
    android:background="@drawable/rounded_popup_white"
    android:gravity="center"
    android:orientation="vertical"
    android:showDividers="middle|beginning|end">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:id="@+id/web_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/arrow_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:foregroundGravity="center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="@string/playback_settings_title"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/push_again_btn"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:drawableTop="@drawable/icon_repush"
            android:fontFamily="@font/poppins_semibold"
            android:foregroundGravity="center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:text="@string/re_push"
            android:textAllCaps="false"
            android:textColor="@color/leadme_darkest_grey"
            android:textSize="10sp"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/preview_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end"
        android:visibility="visible">


        <WebView
            android:id="@+id/within_webview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/leadme_black">

        </WebView>

        <TextView
            android:id="@+id/no_internet"
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:background="@color/leadme_darkest_grey"
            android:drawableBottom="@drawable/icon_restart"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:padding="50dp"
            android:text="Internet unavailable\n\nPlease check your connection and tap to retry."
            android:textColor="@color/leadme_white"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/leadme_darkest_grey"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/basic_controls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/leadme_darkest_grey"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/vr_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:drawableLeft="@drawable/task_vr_icon"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:includeFontPadding="false"
                    android:text="VR mode on"
                    android:textColor="@color/leadme_white"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/vid_play"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/pause_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:padding="5dp"
                    android:src="@drawable/vid_pause"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/mute_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:src="@drawable/vid_mute"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/unmute_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:src="@drawable/vid_unmute"
                    android:textColor="@color/leadme_white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/vr_selection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vr_mode_icon"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:gravity="center_horizontal"
                    android:src="@drawable/task_vr_icon" />

                <Switch
                    android:id="@+id/vr_mode_toggle"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0"
                    android:checked="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_vertical|end"
                    android:includeFontPadding="false"
                    android:showText="false"
                    android:switchMinWidth="50dp"
                    android:switchPadding="10dp"
                    android:text="@string/vr_mode_on"
                    android:textColor="@color/leadme_white"
                    android:textSize="16sp"
                    android:thumb="@drawable/toggle_thumb"
                    android:track="@drawable/toggle_track" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/within_playback_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <Button
                android:id="@+id/new_video"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/standard_btn_width"
                android:layout_height="@dimen/standard_btn_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_active"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/new_video"
                android:textAllCaps="false"
                android:textColor="@color/leadme_white"
                android:textSize="16sp"
                app:layout_gravity="center_horizontal" />

            <Space
                android:layout_width="52dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/video_back_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/standard_btn_width"
                android:layout_height="@dimen/standard_btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_passive"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/leadme_darkest_grey"
                android:textSize="16sp"
                app:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/within_select_btns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/toggleBtnView"
                style="@style/EmptyStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/stream_btn"
                    android:layout_width="125dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_passive_right"
                    android:drawableStart="@drawable/icon_stream"
                    android:elevation="2dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:includeFontPadding="false"
                    android:paddingStart="25dp"
                    android:paddingEnd="15dp"
                    android:text="Stream"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/leadme_black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/download_btn"
                    android:layout_width="125dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_passive_left_white"
                    android:drawableStart="@drawable/icon_download"
                    android:elevation="3dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:includeFontPadding="false"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:text="@string/download"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/leadme_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="-10dp"
                    app:cardBackgroundColor="@color/leadme_white"
                    app:cardElevation="5dp"
                    app:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/down_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingStart="5dp"
                        android:src="@drawable/down_arrow" />

                    <Spinner
                        android:id="@+id/push_spinner"
                        android:layout_width="60dp"
                        android:layout_height="@dimen/standard_btn_height"
                        android:layout_marginTop="-10dp"
                        android:background="@color/leadme_white"
                        android:dropDownWidth="wrap_content"
                        android:gravity="top"
                        android:padding="0dp"
                        android:popupBackground="@color/leadme_white"
                        android:spinnerMode="dropdown"
                        android:theme="@style/MatchSpinnerTheme"
                        android:translationZ="-10dp"
                        tools:listitem="@layout/row_push_spinner" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/push_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/standard_btn_width"
                    android:layout_height="@dimen/standard_btn_height"
                    android:background="@drawable/bg_active"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/push_to_selected"
                    android:textAllCaps="false"
                    android:textColor="@color/leadme_white"
                    android:textSize="16sp"
                    app:layout_gravity="center_horizontal" />

                <Space
                    android:layout_width="52dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <Space
                android:layout_width="52dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/within_back"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/standard_btn_width"
                android:layout_height="@dimen/standard_btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_passive"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/leadme_darkest_grey"
                android:textSize="16sp"
                app:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>