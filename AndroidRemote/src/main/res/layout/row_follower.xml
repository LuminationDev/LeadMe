<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="6dip"
    android:textAlignment="center">

    <ImageView
        android:id="@+id/student_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/iconDesc"
        android:foregroundGravity="center"
        android:src="@drawable/student_placeholder"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/student_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="0dp"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="top"
            android:gravity="center_horizontal|top|center_vertical"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/luminationMediumAccent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/student_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/statustext_size"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal|top|center_vertical"
        android:text="&#x2716; Status\nStatus"
        android:textAlignment="center"
        android:textColor="@color/luminationMediumAccent"
        android:textSize="12sp"
        android:visibility="visible"
        tools:visibility="visible" />

</LinearLayout>